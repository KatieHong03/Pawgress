            profilePage.classList.remove('active');
            profilePage.classList.add('hidden-right');
            selectAnimalPage.classList.remove('hidden');
            selectAnimalPage.classList.remove('active');
            loginPage.classList.remove('hidden');
            
            // Reset login form
            emailInput.value = '';
            passwordInput.value = '';
            loginForm.classList.remove('form-filled');
            
            // Reset animal selection
            selectedAnimal = null;
            animalItems.forEach(i => i.classList.remove('selected'));
